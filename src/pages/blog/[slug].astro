import Layout from "../../layouts/Layout.astro";
import { blogPosts, blogCategories } from "../../config/blog";

export function getStaticPaths() {
    return blogPosts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const category = blogCategories.find((c) => c.id === post.category);

// Get related posts
const relatedPosts = blogPosts
    .filter(
        (p) =>
            p.id !== post.id &&
            (p.category === post.category || post.relatedPosts?.includes(p.id)),
    )
    .slice(0, 3);

// Convert markdown-like content to HTML
function formatContent(content: string): string {
    return (
        content
            // Headers
            .replace(
                /^## (.*$)/gim,
                '<h2 class="text-2xl font-bold text-white mt-10 mb-4">$1</h2>',
            )
            .replace(
                /^### (.*$)/gim,
                '<h3 class="text-xl font-bold text-white mt-8 mb-3">$1</h3>',
            )
            // Bold
            .replace(
                /\*\*(.*?)\*\*/g,
                '<strong class="text-white font-semibold">$1</strong>',
            )
            // Code blocks
            .replace(
                /```(\w+)?\n([\s\S]*?)```/g,
                '<pre class="bg-gray-900 border border-gray-700 rounded-xl p-4 overflow-x-auto my-6"><code class="text-sm text-gray-300">$2</code></pre>',
            )
            // Inline code
            .replace(
                /`([^`]+)`/g,
                '<code class="bg-gray-800 px-2 py-1 rounded text-violet-400 text-sm">$1</code>',
            )
            // Lists
            .replace(
                /^- (.*$)/gim,
                '<li class="text-gray-300 mr-6 mb-2">$1</li>',
            )
            .replace(
                /^(\d+)\. (.*$)/gim,
                '<li class="text-gray-300 mr-6 mb-2"><span class="text-violet-400 font-bold ml-2">$1.</span> $2</li>',
            )
            // Paragraphs
            .split("\n\n")
            .map((p) => {
                if (
                    p.startsWith("<h") ||
                    p.startsWith("<pre") ||
                    p.startsWith("<li")
                )
                    return p;
                if (p.trim() === "") return "";
                return `<p class="text-gray-400 leading-relaxed mb-4">${p}</p>`;
            })
            .join("\n")
    );
}
