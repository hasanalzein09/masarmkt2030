---
import Layout from "@/layouts/Layout.astro";
import { solutions } from "@/config/solutions";
import { siteConfig, services } from "@/config/site";

export async function getStaticPaths() {
    return solutions.map((solution) => ({
        params: { slug: solution.slug },
        props: { solution },
    }));
}

const { solution } = Astro.props;

if (!solution) {
    return Astro.redirect("/404");
}

// Find related services
const relatedServices = services.filter((service) => {
    const keywords = solution.keywords.join(" ").toLowerCase();
    return (
        (keywords.includes("واتساب") && service.id === "whatsapp-ai") ||
        (keywords.includes("انستقرام") && service.id === "instagram-ai") ||
        (keywords.includes("فيسبوك") && service.id === "messenger-ai") ||
        (keywords.includes("موقع") && service.id === "web-development") ||
        (keywords.includes("seo") && service.id === "seo") ||
        (keywords.includes("اتمتة") && service.id === "ai-automation")
    );
});

const title = `${solution.titleAr} في السعودية | ${solution.solutionAr} | ${siteConfig.name}`;
const description = `${solution.problemAr}؟ ${solution.solutionAr}. خدماتنا متاحة في الرياض، جدة، مكة، الدمام وكل السعودية.`;

// JSON-LD for Solution and Breadcrumbs
const breadcrumbSchema = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
        {
            "@type": "ListItem",
            position: 1,
            name: "الرئيسية",
            item: siteConfig.url,
        },
        {
            "@type": "ListItem",
            position: 2,
            name: "الحلول",
            item: `${siteConfig.url}/solutions`,
        },
        {
            "@type": "ListItem",
            position: 3,
            name: solution.titleAr,
            item: `${siteConfig.url}/solutions/${solution.slug}`,
        },
    ],
};

const serviceSchema = {
    "@context": "https://schema.org",
    "@type": "Service",
    "@id": `${siteConfig.url}/solutions/${solution.slug}#service`,
    name: solution.titleAr,
    description: solution.solutionAr,
    provider: {
        "@type": "Organization",
        "@id": `${siteConfig.url}/#organization`,
    },
    areaServed: siteConfig.cities.map((city) => ({
        "@type": "City",
        name: city.nameAr,
    })),
};
---

<Layout title={title} description={description}>
    <script
        type="application/ld+json"
        set:html={JSON.stringify(breadcrumbSchema)}
    />
    <script
        type="application/ld+json"
        set:html={JSON.stringify(serviceSchema)}
    />
    <main class="min-h-screen bg-black text-white">
        {/* Hero Section */}
        <section class="relative py-20 overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-br from-purple-900/20 via-black to-blue-900/20"
            >
            </div>
            <div class="container mx-auto px-4 relative z-10">
                <div class="text-center max-w-4xl mx-auto">
                    <span class="text-6xl mb-6 block">{solution.icon}</span>
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600"
                            >{solution.titleAr}</span
                        > في السعودية
                    </h1>

                    {/* Problem */}
                    <div
                        class="bg-red-900/20 border border-red-500/30 rounded-2xl p-6 mb-6"
                    >
                        <h2 class="text-xl font-bold text-red-400 mb-2">
                            ❌ المشكلة
                        </h2>
                        <p class="text-lg text-gray-300">
                            {solution.problemAr}
                        </p>
                    </div>

                    {/* Solution */}
                    <div
                        class="bg-green-900/20 border border-green-500/30 rounded-2xl p-6 mb-8"
                    >
                        <h2 class="text-xl font-bold text-green-400 mb-2">
                            ✅ الحل
                        </h2>
                        <p class="text-lg text-gray-300">
                            {solution.solutionAr}
                        </p>
                    </div>

                    <a
                        href={`https://wa.me/${siteConfig.contact.whatsapp}?text=مرحباً، أريد ${solution.titleAr}`}
                        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-green-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:scale-105 transition-transform"
                    >
                        احصل على الحل الآن
                    </a>
                </div>
            </div>
        </section>

        {/* Cities Coverage */}
        <section class="py-16 bg-gray-900/50">
            <div class="container mx-auto px-4">
                <h2 class="text-2xl md:text-3xl font-bold text-center mb-8">
                    {solution.titleAr} في كل مدن السعودية
                </h2>
                <div
                    class="flex flex-wrap justify-center gap-3 max-w-4xl mx-auto"
                >
                    {
                        siteConfig.cities.map((city) => (
                            <a
                                href={`/services/by-city/whatsapp-bot/${city.id}`}
                                class="px-4 py-2 bg-white/5 hover:bg-white/10 rounded-full border border-gray-700 hover:border-purple-500/50 transition-all"
                            >
                                {solution.titleAr} {city.nameAr}
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>

        {/* Related Services */}
        {
            relatedServices.length > 0 && (
                <section class="py-20">
                    <div class="container mx-auto px-4">
                        <h2 class="text-3xl font-bold text-center mb-12">
                            خدماتنا لـ{solution.titleAr}
                        </h2>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
                            {(relatedServices.length > 0
                                ? relatedServices
                                : services.slice(0, 3)
                            ).map((service) => (
                                <a
                                    href={`/services/${service.slug}`}
                                    class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl p-6 border border-gray-700 hover:border-purple-500/50 transition-all hover:scale-105"
                                >
                                    <h3 class="text-xl font-bold mb-2">
                                        {service.nameAr}
                                    </h3>
                                    <p class="text-gray-400 text-sm mb-4">
                                        {service.shortDescAr}
                                    </p>
                                    <div class="flex items-baseline gap-1">
                                        <span class="text-xs text-gray-500">
                                            {service.priceLabelAr}
                                        </span>
                                        <span class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
                                            {service.currency}
                                            {service.priceFrom}
                                        </span>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </section>
            )
        }

        {/* Keywords SEO */}
        <section class="py-16 bg-gray-900/50">
            <div class="container mx-auto px-4">
                <h2 class="text-2xl font-bold text-center mb-8">بحث شائع</h2>
                <div
                    class="flex flex-wrap justify-center gap-2 max-w-4xl mx-auto"
                >
                    {
                        solution.keywords.map((keyword, i) => (
                            <span class="px-3 py-1 bg-white/5 rounded-full text-sm text-gray-400">
                                {keyword}
                            </span>
                        ))
                    }
                    {
                        siteConfig.cities.slice(0, 4).map((city) => (
                            <span class="px-3 py-1 bg-white/5 rounded-full text-sm text-gray-400">
                                {solution.titleAr} {city.nameAr}
                            </span>
                        ))
                    }
                </div>
            </div>
        </section>

        {/* Other Solutions */}
        <section class="py-20">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-12">حلول أخرى</h2>
                <div
                    class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4 max-w-5xl mx-auto"
                >
                    {
                        solutions
                            .filter((s) => s.id !== solution.id)
                            .slice(0, 10)
                            .map((sol) => (
                                <a
                                    href={`/solutions/${sol.slug}`}
                                    class="bg-black/50 rounded-xl p-4 text-center border border-gray-800 hover:border-purple-500/50 transition-colors"
                                >
                                    <span class="text-2xl block mb-2">
                                        {sol.icon}
                                    </span>
                                    <span class="text-sm">{sol.titleAr}</span>
                                </a>
                            ))
                    }
                </div>
            </div>
        </section>

        {/* CTA */}
        <section
            class="py-20 bg-gradient-to-r from-purple-900/30 to-pink-900/30"
        >
            <div class="container mx-auto px-4 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    جاهز لـ{solution.titleAr}؟
                </h2>
                <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
                    تواصل معنا الآن واحصل على استشارة مجانية
                </p>
                <a
                    href={`https://wa.me/${siteConfig.contact.whatsapp}?text=مرحباً، أريد ${solution.titleAr}`}
                    class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-green-600 text-white px-8 py-4 rounded-full text-lg font-semibold hover:scale-105 transition-transform"
                >
                    واتساب مباشر
                </a>
            </div>
        </section>
    </main>
</Layout>
